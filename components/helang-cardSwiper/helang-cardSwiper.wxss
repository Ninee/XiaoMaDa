.top-swiper {
    margin-bottom: 30rpx;
}

.top-swiper .bg {
    padding-top: 25px;
    width: 100%;
    position: relative;
}

.top-swiper .bg,.top-swiper .bg .placeholder {
    box-sizing: content-box;
}

.top-swiper .bg .placeholder {
    padding-top: 600rpx;
    height: 44px;
}

.top-swiper .bg .image {
    box-sizing: content-box;
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.top-swiper .bg .image::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
    bottom: 0;
    left: 0;
    height: 65%;
    background-image: -webkit-gradient(linear,left top,left bottom,from(transparent),to(#fff));
    background-image: -webkit-linear-gradient(top,transparent,#fff);
    background-image: linear-gradient(180deg,transparent,#fff);
}

.top-swiper .bg .image>image {
    padding: 60px;
    top: 0;
    left: 0;
    height: 80%;
    top: -60px;
    left: -60px;
    filter: blur(50px);
}

.top-swiper .bg .image>image,.top-swiper .box {
    position: absolute;
    box-sizing: content-box;
    width: 100%;
}

.top-swiper .box {
    padding-top: 25px;
    z-index: 5;
    top: 0;
    left: 0;
    height: auto;
}

.top-swiper .swiper {
    height: 630rpx;
}

.top-swiper .swiper .le-img {
    width: 100%;
    height: 100%;
    display: block;
    transform: scale(.9);
    transition: transform .3s ease-in-out 0s;
    transition: transform .3s ease-in-out 0s,-webkit-transform .3s ease-in-out 0s;
    border-radius: 4px;
    box-shadow: 0 10px 20px 0 rgba(0,0,0,.3);
}

.top-swiper .swiper .le-img.le-active {
    transform: scale(1);
}

.top-swiper .swiper .bg_shadow {
    box-shadow: 0 10px 20px 0 rgba(0,0,0,.3);
}