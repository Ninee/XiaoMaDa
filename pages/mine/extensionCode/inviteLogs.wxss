.out_padding {
    padding: 20rpx 24rpx;
}

.out_padding .white_box {
    width: 100%;
    background: #fff;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
}

.lines {
    width: 2rpx;
    height: 120rpx;
    background: #f5f5f5;
}

.money_l {
    width: 350rpx;
    height: 160rpx;
    font-size: 28rpx;
    color: #666;
    -webkit-box-pack: center;
    justify-content: center;
}

.money_l .moneys_num {
    font-size: 80rpx;
    line-height: 1;
    color: #ff0200;
}

.money_l .moneys_num .money_symbol {
    font-size: 28rpx;
    line-height: 1;
}

.top_btns {
    margin-bottom: 30rpx;
}

.top_btns .top_btns_l {
    width: 300rpx;
    height: 50rpx;
    background: -webkit-gradient(linear,left bottom,left top,from(#ff0100),to(#ff8c8c));
    background: -webkit-linear-gradient(bottom,#ff0100,#ff8c8c);
    background: linear-gradient(0deg,#ff0100,#ff8c8c);
    border-radius: 26rpx 0 0 26rpx;
    font-size: 24rpx;
    color: #fff;
}

.top_btns .top_btns_r {
    width: 300rpx;
    height: 50rpx;
    border: 2rpx solid #ff0100;
    border-radius: 0 26rpx 26rpx 0;
}

.friend_list {
    color: #666;
}

.friend_list .list_item {
    width: 100%;
    height: 100rpx;
    background: #f5f5f5;
    border-radius: 8rpx;
    margin-bottom: 20rpx;
}

.friend_list .list_item .friend_list_head_img {
    border-radius: 50%;
    width: 76rpx;
    height: 76rpx;
    background-color: #cecfd2;
    margin: 0 16rpx 0 32rpx;
}

.friend_list .list_item .list_item_tell {
    height: 76rpx;
    justify-content: space-around;
}

.friend_list .list_item .list_item_tell .list_item_top {
    font-size: 24rpx;
    color: #666;
    font-weight: 700;
}

.friend_list .list_item .list_item_tell .list_item_time {
    font-size: 20rpx;
    color: 999999;
}

.friend_list .list_item .friend_list_money {
    margin: 0 50rpx 0 104rpx;
}

.friend_list .list_item .friend_list_money .friend_list_money_num {
    font-size: 48rpx;
    color: #ff0200;
    margin-right: 10rpx;
}

.friend_list .list_item .list_item_btn {
    height: 76rpx;
    padding-right: 38rpx;
}

.friend_list .list_item .list_item_btn .list_item_btn_des {
    font-size: 24rpx;
    color: #666;
}

.friend_list .list_item .list_item_btn .des_two {
    font-size: 24rpx;
    color: #ff0200;
}

.friend_list .list_item .list_item_btn .list_item_btns {
    width: 126rpx;
    height: 34rpx;
    background: -webkit-gradient(linear,left bottom,left top,color-stop(1%,#ff302f),color-stop(84%,#ff6e67),color-stop(99%,#ff6e67));
    background: -webkit-linear-gradient(bottom,#ff302f 1%,#ff6e67 84%,#ff6e67 99%);
    background: linear-gradient(0deg,#ff302f 1%,#ff6e67 84%,#ff6e67 99%);
    border-radius: 18rpx;
    font-size: 24rpx;
    color: #fff;
}

.friend_list .look_more {
    height: 68rpx;
    font-size: 28rpx;
    color: #666;
    text-align: center;
    padding-top: 10rpx;
}

.DIN {
    font-family: DIN;
}

.phone_btn {
    padding: 0;
}

.phone_btn:after {
    border: none;
}