.none_add_lists {
    width: 100%;
    height: 100vh;
    -webkit-box-pack: center;
    justify-content: center;
}

.none_add_lists .no_address {
    font-size: 28rpx;
    color: #333;
    text-align: center;
    margin-top: 31rpx;
}

.none_add_lists .new_add_address {
    width: 180rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    background: #09d334;
    border-radius: 36rpx;
    font-size: 28rpx;
    color: #fff;
    margin-top: 46rpx;
}

.list_items {
    width: 710rpx;
    background: #fff;
    border-radius: 16rpx;
    padding: 26rpx 20rpx 0;
    color: #41414d;
    margin-bottom: 20rpx;
}

.list_items .user_info {
    font-size: 32rpx;
    font-weight: 700;
}

.list_items .user_info .user_name {
    width: 130rpx;
    margin-right: 20rpx;
}

.list_items .user_addr {
    font-size: 24rpx;
    margin: 24rpx 0 20rpx;
}

.list_items .operation {
    height: 78rpx;
    border-top: 2rpx solid #e6e6e6;
    font-size: 28rpx;
}

.list_items .operation .edits {
    color: #666;
}

.list_items .operation .edits view {
    height: 78rpx;
}

.list_items .operation .edits view image {
    width: 30rpx;
    height: 30rpx;
    margin: 0 14rpx 0 30rpx;
}

.bottom_btns {
    width: 750rpx;
    height: 180rpx;
    background: #fff;
    box-shadow: 0 0 10rpx 0 rgba(0,0,0,.1);
    font-size: 32rpx;
    padding-top: 20rpx;
    -webkit-box-align: start;
    align-items: flex-start;
    position: fixed;
    bottom: 0;
    z-index: 10;
}

.bottom_btns .btns {
    width: 240rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 40rpx;
}

.bottom_btns .manage {
    border: 2rpx solid #999;
    color: #333;
    margin-right: 60rpx;
}

.bottom_btns .new_addr {
    background: #09d334;
    color: #fff;
    border: none;
}

.bottom_btns .del_addr {
    background: #f3390e;
    color: #fff;
    border: none;
}

.bottom_btns .can_not_del_addr {
    background: #ccc;
    color: #fff;
    border: none;
}

.min_length,.more_hidden {
    display: -webkit-box;
    overflow: hidden;
    white-space: normal!important;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}