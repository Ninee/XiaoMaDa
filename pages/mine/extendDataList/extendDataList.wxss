.c_top {
    width: 100%;
    height: 90rpx;
    background: #fff;
    font-size: 30rpx;
    line-height: 90rpx;
    color: #666;
    margin-bottom: 20rpx;
    top: 80rpx;
    z-index: 9;
    position: fixed;
    top: 0;
    left: 0;
}

.c_item {
    height: 100%;
}

.selItem {
    border-bottom: 6rpx solid #f9d500;
    font-weight: 700;
}

.head {
    margin-top: 84rpx;
    width: 100%;
    padding: 26rpx 59rpx 14rpx 50rpx;
    background: #fff;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 2rpx solid #d8d8d8;
    position: fixed;
    top: 0rpx;
    left: 0;
}

.head .choose_Time,.yellow_btn {
    height: 50rpx;
    line-height: 50rpx;
}

.yellow_btn {
    min-width: 140rpx;
    text-align: center;
    border-radius: 25px;
    padding: 0 20rpx;
}

.y_btn {
    background-color: #f9d500;
}

.choose_Time image {
    width: 20rpx;
    height: 20rpx;
    border-radius: 2rpx;
}

.data_list {
    padding: 20rpx;
    margin-top: 230rpx;
}

.data_list .list_item {
    border-radius: 20rpx;
    background-color: #fff;
    height: 110rpx;
    margin-bottom: 20rpx;
}

.data_list .list_item,.data_list .list_item .item_l {
    display: flex;
}

.data_list .list_item .item_l {
    margin-top: 20rpx;
    -webkit-box-pack: center;
    justify-content: center;
    width: 190rpx;
}

.data_list .list_item .item_l .item_l_img {
    width: 70rpx;
    height: 70rpx;
    display: block;
    border-radius: 50%;
}

.data_list .list_item .item_r {
    -webkit-box-flex: 1;
    flex: 1;
    -webkit-box-align: center;
    align-items: center;
    border-left: 2rpx solid #d9d9d9;
    margin: 16rpx 0;
}

.data_list .list_item .item_r,.data_list .list_item .item_r .item_r_l {
    display: flex;
    justify-content: space-around;
}

.data_list .list_item .item_r .item_r_l {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.selectTime {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #fff;
    position: fixed;
    top: 174rpx;
    left: 0;
    color: #333;
    font-size: 30rpx;
    padding-left: 48rpx;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
}