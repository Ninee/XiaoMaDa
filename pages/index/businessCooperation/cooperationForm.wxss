page {
    background: #fff;
}

.business_img {
    width: 100%;
    height: 100%;
}

.out_padding {
    padding: 0 48rpx 200rpx;
    width: 100%;
}

.out_padding .form_items {
    width: 100%;
    height: 160rpx;
    border-bottom: 2rpx solid #e6e6e6;
    padding-top: 30rpx;
    justify-content: space-around;
    font-size: 28rpx;
    color: #333;
}

.out_padding .form_items image {
    width: 20rpx;
    height: 20rpx;
    margin-right: 10rpx;
}

.out_padding .form_items .form_items_title {
    color: #666;
}

.out_padding .form_items .form_items_title text {
    color: red;
}

.out_padding .submit_btn {
    font-size: 36rpx;
    color: #fff;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    background: #09d334;
    border-radius: 40rpx;
    margin-top: 34rpx;
}

.bottom_btns {
    width: 100%;
    background: #fff;
    box-shadow: 0 0 10rpx 0 rgba(0,0,0,.1);
    position: fixed;
    bottom: 0;
    padding: 20rpx 104rpx 80rpx;
}

.bottom_btns .btns {
    width: 240rpx;
    height: 80rpx;
    line-height: 80rpx;
    border: 2rpx solid #999;
    border-radius: 40rpx;
    font-size: 32rpx;
    color: #09d334;
}

.bottom_btns .btns image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 4rpx;
}

.sel_goods {
    height: 600rpx;
    background: #fff;
    color: #fff;
    font-size: 28rpx;
}

.sel_goods,.sel_goods .sel_goods_title {
    border-radius: 16rpx 16rpx 0 0;
}

.sel_goods .sel_goods_title {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #000;
    border-bottom: 2rpx solid #999;
}

.sel_goods .sel_goods_btn {
    margin-top: -100rpx;
}

.sel_goods .sel_goods_btn view {
    width: 260rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: #eee;
    border-radius: 40rpx;
    color: #999;
    font-size: 36rpx;
    margin-top: 20rpx;
}

.sel_goods .sel_goods_btn view:last-child {
    background: #08c227;
    margin-left: 30rpx;
    color: #fff;
}

.sel_goods .picker-view {
    width: 750rpx;
    height: 350rpx;
    color: #fff;
    background: #fff;
    font-size: 28rpx;
    padding-bottom: 100rpx;
}

.sel_goods .picker-view picker-view-column {
    margin-top: -140rpx;
}

.sel_goods .picker_bg {
    background: transparent;
    color: #000;
    height: 100rpx;
}

.sel_goods .item {
    height: 70rpx;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    text-align: center;
    color: #000;
}

.phone_btn {
    background: none;
    line-height: 1;
    font-size: 24rpx;
    padding: 0 0 4rpx;
    margin: 0;
}

.phone_btn,.phone_btn:after {
    border: none;
}