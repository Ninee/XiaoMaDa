page {
    background-color: #ff2d46;
}

.content {
    width: 100vw;
    min-height: 100vh;
    overflow: hidden;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
}

.bg_img {
    position: relative;
    overflow: hidden;
}

.bg_img,.bg_img image {
    width: 100%;
}

.bg_img .positions {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
}

.bg_img .positions .title {
    font-size: 100rpx;
    font-weight: 700;
    color: #fff;
    text-align: center;
    padding-top: 11.6%;
}

.bg_img .positions .rules {
    width: 70%;
    background-color: #fff;
    border-radius: 20rpx;
    padding: 60rpx;
    margin: 13.2% auto 0;
    box-shadow: inset 0rpx 0rpx 50rpx 0rpx #ffc628;
}

.bg_img .positions .rules .rules_f {
    font-size: 32rpx;
    color: #333;
    text-align: justify;
}

.bg_img .btn {
    font-size: 36rpx;
    color: #fe0106;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    margin-top: 20%;
    text-align: center;
    position: absolute;
    left: 0;
    bottom: 100rpx;
    z-index: 2;
}

.bg_img .btn .btns {
    background: -webkit-gradient(linear,right top,left top,from(#fff047),to(#ffe533));
    background: -webkit-linear-gradient(right,#fff047,#ffe533);
    background: linear-gradient(-90deg,#fff047,#ffe533);
    border-radius: 44rpx;
    width: 460rpx;
    margin: 0 auto;
}